{
    "type": "module",
    "scripts": {
        "test": "node run_tests.js",
        "test:watch": "node --watch run_tests.js",
        "test:coverage": "c8 --reporter=html --reporter=text --reporter=lcov node run_tests.js",
        "test:coverage:summary": "c8 --reporter=text-summary node run_tests.js",
        "test:e2e": "playwright test",
        "lint": "eslint js/",
        "lint:fix": "eslint js/ --fix"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "c8": "^10.1.3",
        "eslint": "^8.57.0",
        "http-server": "^14.1.1"
    },
    "c8": {
        "all": true,
        "include": [
            "js/**/*.js"
        ],
        "exclude": [
            "js/three.min.js",
            "js/main.js",
            "tests/**",
            "node_modules/**",
            "*.config.js"
        ],
        "reporter": [
            "text",
            "html",
            "lcov"
        ],
        "report-dir": "./coverage",
        "clean": true,
        "check-coverage": false,
        "lines": 80,
        "functions": 80,
        "branches": 80,
        "statements": 80
    },
    "dependencies": {
        "three": "^0.182.0"
    }
}
