{
    "type": "module",
    "scripts": {
        "dev": "vite",
        "test": "npx vitest run",
        "test:watch": "npx vitest",
        "test:coverage": "npx vitest run --coverage",
        "test:e2e": "playwright test",
        "lint": "eslint \"js/**/*.{js,ts}\"",
        "lint:fix": "eslint \"js/**/*.{js,ts}\" --fix",
        "typecheck": "tsc --noEmit",
        "build": "vite build"
    },
    "devDependencies": {
        "@lhci/cli": "^0.15.1",
        "@playwright/test": "^1.57.0",
        "@types/node": "^25.0.3",
        "@vitest/coverage-istanbul": "^4.0.16",
        "@vitest/coverage-v8": "^4.0.16",
        "c8": "^10.1.3",
        "clean-css-cli": "^5.6.3",
        "eslint": "^9.39.2",
        "http-server": "^14.1.1",
        "jsdom": "^27.4.0",
        "terser": "^5.31.1",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-pwa": "^1.2.0",
        "vitest": "^4.0.16",
        "workbox-window": "^7.4.0"
    },
    "c8": {
        "all": true,
        "include": [
            "js/**/*.{js,ts}"
        ],
        "exclude": [
            "js/three.min.js",
            "js/main.js",
            "tests/**",
            "node_modules/**",
            "*.config.js"
        ],
        "reporter": [
            "text",
            "html",
            "lcov"
        ],
        "report-dir": "./coverage",
        "clean": true,
        "check-coverage": false,
        "lines": 80,
        "functions": 80,
        "branches": 80,
        "statements": 80
    },
    "dependencies": {
        "three": "^0.182.0"
    }
}
