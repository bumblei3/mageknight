{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "allowJs": true,
        "checkJs": false,
        "strict": false,
        "noEmit": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "three": [
                "./js/vendor/three.module.js"
            ],
            "three/addons/*": [
                "./js/vendor/*"
            ]
        },
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "js/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "js/vendor/**/*"
    ]
}